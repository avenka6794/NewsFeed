                    li
                      a(href='#')
                        span.lnr.lnr-calendar-full
                        | #{travel[0].published_date}

              .single-list.flex-row.d-flex
                .thumb
                  img(src=travel[1].multimedia[0].url, alt='')
                .details
                  a(href='/post?q='+travel[1].url)
                    h6
                      | #{travel[1].title}
                  ul.meta
